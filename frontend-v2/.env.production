# Configuración del Frontend - Producción
# Este archivo se usa cuando se ejecuta con --mode production

# =============================================================================
# INFORMACIÓN DE LA APLICACIÓN
# =============================================================================
VITE_APP_TITLE=Organizador TUPaD
VITE_APP_VERSION=2.0.0

# =============================================================================
# CONFIGURACIÓN DE LA API
# =============================================================================
# URL base de la API backend (producción)
VITE_API_BASE_URL=https://api.tupad.edu.ar
# Timeout en milisegundos para las peticiones HTTP
VITE_API_TIMEOUT=20000

# =============================================================================
# CONFIGURACIÓN DEL SERVIDOR DE DESARROLLO
# =============================================================================
# Puerto del servidor de desarrollo de Vite
VITE_DEV_SERVER_PORT=80
# Habilitar acceso desde otros dispositivos en la red
VITE_DEV_SERVER_HOST=false
# URL objetivo del proxy para desarrollo
VITE_PROXY_TARGET=https://api.tupad.edu.ar

# =============================================================================
# CONFIGURACIÓN DE AUTENTICACIÓN
# =============================================================================
# Clave para almacenar el token en localStorage
VITE_AUTH_STORAGE_KEY=tupad_auth_token_prod
# Intervalo de refresco del token en milisegundos (5 minutos)
VITE_AUTH_REFRESH_INTERVAL=300000

# =============================================================================
# CONFIGURACIÓN DE LA APLICACIÓN
# =============================================================================
# Ambiente de la aplicación
VITE_APP_ENV=production
# Habilitar logs de debug
VITE_APP_DEBUG=false
